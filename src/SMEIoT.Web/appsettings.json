{
  "ConnectionStrings": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "smeiot",
    "UserName": "smeiot"
  },
  "LetsEncrypt": {
    "AcceptTermsOfService": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Hangfire": "Information",
      "SMEIoT.Infrastructure.MqttClient": "Information"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:80"
      },
      "HttpsDefaultCert": {
        "Url": "https://*:443"
      }
    }
  },
  "SMEIoT": {
    "UseMosquittoBackgroundClient": true,
    "MqttHost": "localhost",
    "MqttPort": 4588,
    "SystemFilesRoot": "/var/SMEIoT/run",
    "MosquittoBackgroundClientRunloopInteval": 100
  }
}
