{
  "ConnectionStrings": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "smeiot_development"
  },
  "Kestrel": {
    "Endpoints": {
      "HttpsDefaultCert": {
        "Url": "https://127.0.0.1:5001"
      },
      "Http": {
        "Url": "http://127.0.0.1:5000"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information",
      "SMEIoT.Core.Services": "Trace",
      "SMEIoT.Core.EventHandlers": "Trace",
      "SMEIoT.Infrastructure.Mosquitto": "Trace",
      "SMEIoT.Infrastructure.MqttClient": "Trace",
      "SMEIoT.Infrastructure.Data": "Trace",
      "SMEIoT.Web.Api.V1": "Trace"
    }
  },
  "SMEIoT": {
    "UseMosquittoBackgroundClient": false,
    "SystemFilesRoot": "/tmp",
    "MosquittoBackgroundClientRunloopInterval": 300,
    "DevThrottleMiddlewareDelayMillis": 1000
  }
}
